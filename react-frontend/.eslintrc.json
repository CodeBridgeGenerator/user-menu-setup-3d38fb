{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "indent": "off", 
    "quotes": "off", 
    "semi": "off",
    "no-unused-vars": "off",
    "no-undef": "off",
    "linebreak-style": "off",
    "no-console": "warn", 
    "eqeqeq": "warn"
  }
}
